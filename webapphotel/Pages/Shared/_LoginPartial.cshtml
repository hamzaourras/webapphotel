@using Microsoft.AspNetCore.Identity
@using webapphotel.Model
@inject SignInManager<Users> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form asp-page="/Account/Logout" method="post"> <button type="submit" class="btn btn-link">Logout</button> </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>
