@page
@model webapphotel.Pages.Rooms.IndexModel
@{
    ViewData["Title"] = "Our Rooms";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/Rooms.css">

<section id="rooms" class="py-5">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Luxury at Its Best</h2>
            <p class="text-muted">Explore our elegantly designed rooms for a perfect stay.</p>
        </div>

        <div class="row g-4 flex-column">
            
            <div class="col-md-12">
                <div class="room-card">
                    <img src="https://amorgoshotel.com/wp-content/uploads/2014/12/Amorgos-Standard-Room1-e1464286427430.jpg" class="img-fluid room-img" alt="Standard Room">
                    <div class="room-overlay">
                        <h3>Standard Room</h3>
                        <p>Cozy and affordable with all essentials.</p>
                        <a href="/Account/Login" class="btn btn-light">Book Now</a>
                    </div>
                </div>
            </div>

            
            <div class="col-md-12">
                <div class="room-card">
                    <img src="https://alayahotels.com/alayaresortubud/wp-content/uploads/sites/2/2017/04/deluxe-web.jpg" class="img-fluid room-img" alt="Deluxe Room">
                    <div class="room-overlay">
                        <h3>Deluxe Room</h3>
                        <p>Spacious and stylish for your comfort.</p>
                        <a href="/Account/Login" class="btn btn-light">Book Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="room-card">
                    <img src="https://techcrunch.com/wp-content/uploads/2016/12/dream-presidential-suite-terrace.jpg" class="img-fluid room-img" alt="Suite Room">
                    <div class="room-overlay">
                        <h3>Suite</h3>
                        <p>Luxury living with breathtaking views.</p>
                        <a href="/Account/Login" class="btn btn-light">Book Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
