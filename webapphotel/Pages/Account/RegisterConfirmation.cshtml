@page
@model webapphotel.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Confirmation";
    Layout = "_Layout";
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
}

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4">Confirm your email</h2>
        <div class="alert alert-success" role="alert">
            <p>We've sent a confirmation link to <strong>@Model.Email</strong>.</p>
            <p>Please check your email inbox and click on the verification link to complete your registration.</p>
        </div>
        <div class="text-center mt-3">
            <p>Didn't receive the email?</p>
            <form method="post">
                <input type="hidden" asp-for="Email" />
                <button type="submit" class="btn btn-primary">Resend confirmation email</button>
            </form>
            <div class="mt-3">
                <a asp-page="/Account/Login" class="text-decoration-none">Back to Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}