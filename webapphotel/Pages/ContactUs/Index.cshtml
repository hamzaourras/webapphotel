@page
@model webapphotel.Pages.ContactUs.IndexModel
@{
    ViewData["Title"] = "Contact Us";
}
<link rel="stylesheet" href="~/css/contactus.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<section id="contact" class="py-5">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Contact Us</h2>
            <p class="text-muted">Get in touch with us for any inquiries or reservations.</p>
        </div>

        <div class="row">
            <!-- Contact Form -->
            <div class="col-md-6">
                <div class="card shadow p-4">
                    <h4 class="mb-3">Send Us a Message</h4>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="4" placeholder="Write your message here..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Send Message</button>
                    </form>
                </div>
            </div>

            <!-- Contact Info -->
            <div class="col-md-6">
                <div class="card shadow p-4 bg-dark text-light">
                    <h4 class="mb-3">Contact Information</h4>
                    <p><i class="bi bi-geo-alt-fill"></i> Grand Luxe Hotel, Marrakech, Morocco</p>
                    <p><i class="bi bi-telephone-fill"></i> +212 123 456 789</p>
                    <p><i class="bi bi-envelope-fill"></i> contact@grandluxehotel.com</p>

                    <!-- Optional: Google Map -->
                    <div class="mt-3">
                        <iframe class="w-100" height="250" frameborder="0"
                                src="https://maps.google.com/maps?q=Marrakech,%20Morocco&t=&z=13&ie=UTF8&iwloc=&output=embed" allowfullscreen>
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

