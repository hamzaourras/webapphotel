@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to RoyalStay Hotel";
}
<!-- Hero Section -->
<section class="hero-section text-white text-center d-flex align-items-center justify-content-center" style="min-height: 80vh; background-image: url('/images/hero-hotel.jpg'); background-size: cover; background-position: center;">
    <div class="bg-dark bg-opacity-50 p-5 rounded">
        <h1 class="display-4">Welcome to RoyalStay Hotel</h1>
        <p class="lead">Luxury and comfort in the heart of the city.</p>
        <a href="/Rooms" class="btn btn-primary btn-lg mt-3">Explore Our Rooms</a>
    </div>
</section>

<!-- About Section -->
<section class="about-section py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <h2>About RoyalStay</h2>
                <p>Experience a memorable stay with our premium services, elegant rooms, and world-class hospitality. Whether for business or leisure, RoyalStay ensures your comfort.</p>
                <a href="/AboutUs" class="btn btn-outline-primary">Learn More About Us</a>
            </div>
            <div class="col-md-6">
                <img src="/images/about-hotel.jpg" alt="RoyalStay Lobby" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>

<!-- Rooms Preview Section -->
<section class="rooms-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Our Rooms</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="/images/room-deluxe.jpg" class="card-img-top" alt="Deluxe Room">
                    <div class="card-body">
                        <h5 class="card-title">Deluxe Room</h5>
                        <p class="card-text">Modern design with king-size bed and city view. Perfect for couples or solo travelers.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="/images/room-suite.jpg" class="card-img-top" alt="Suite Room">
                    <div class="card-body">
                        <h5 class="card-title">Suite</h5>
                        <p class="card-text">Spacious and elegant with private lounge, luxury bath, and premium amenities.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="/images/room-standard.jpg" class="card-img-top" alt="Standard Room">
                    <div class="card-body">
                        <h5 class="card-title">Standard Room</h5>
                        <p class="card-text">Cozy, clean, and budget-friendly. Ideal for short stays or business trips.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Why Choose Us</h2>
        <div class="row text-center g-4">
            <div class="col-md-3">
                <i class="bi bi-geo-alt-fill fs-1 text-primary"></i>
                <h5 class="mt-3">Prime Location</h5>
                <p>In the heart of the city with access to major attractions.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-wifi fs-1 text-primary"></i>
                <h5 class="mt-3">Free Wi-Fi</h5>
                <p>High-speed internet throughout the property.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-stars fs-1 text-primary"></i>
                <h5 class="mt-3">Spotless Clean</h5>
                <p>Daily housekeeping and hygiene guaranteed.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-cup-hot fs-1 text-primary"></i>
                <h5 class="mt-3">Breakfast Included</h5>
                <p>Start your day with a fresh and delicious breakfast.</p>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Guest Testimonials</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="bg-light p-4 rounded shadow-sm">
                    <blockquote class="blockquote mb-0">
                        <p>"RoyalStay exceeded our expectations. The staff was incredibly helpful and the suite was luxurious!"</p>
                        <footer class="blockquote-footer mt-2">Sara M., France</footer>
                    </blockquote>
                </div>
            </div>
            <div class="col-md-6">
                <div class="bg-light p-4 rounded shadow-sm">
                    <blockquote class="blockquote mb-0">
                        <p>"Clean rooms, great food, and the best location. Highly recommend for anyone visiting the city."</p>
                        <footer class="blockquote-footer mt-2">John D., USA</footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call-To-Action Banner -->
<section class="cta-section text-white text-center py-5" style="background-image: url('/images/cta-background.jpg'); background-size: cover; background-position: center;">
    <div class="bg-dark bg-opacity-50 p-5 rounded">
        <h2 class="mb-4">Ready to book your stay?</h2>
        <a href="/Account/Login" class="btn btn-success btn-lg me-2">Login</a>
        <a href="/Account/Register" class="btn btn-outline-light btn-lg">Register</a>
    </div>
</section>

<!-- Footer Section -->
<footer class="footer-section bg-dark text-white py-4">
    <div class="container">
        <div class="row text-center text-md-start">
            <div class="col-md-4 mb-3 mb-md-0">
                <h5>RoyalStay Hotel</h5>
                <p>123 Main Street, Casablanca, Morocco</p>
                <p>Email: info@royalstay.com</p>
                <p>Phone: +212 600 123 456</p>
            </div>
            <div class="col-md-4 mb-3 mb-md-0">
                <h5>Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a href="/" class="text-white text-decoration-none">Home</a></li>
                    <li><a href="/Rooms" class="text-white text-decoration-none">Rooms</a></li>
                    <li><a href="/ContactUs" class="text-white text-decoration-none">Contact Us</a></li>
                    <li><a href="/AboutUs" class="text-white text-decoration-none">About</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h5>Follow Us</h5>
                <a href="#" class="text-white me-2"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-white me-2"><i class="bi bi-instagram"></i></a>
                <a href="#" class="text-white"><i class="bi bi-twitter"></i></a>
            </div>
        </div>
        <hr class="bg-light">
        <p class="text-center mb-0">&copy; @DateTime.Now.Year RoyalStay Hotel. All rights reserved.</p>
    </div>
</footer>

@section Scripts {
    <script>
        // Add custom JavaScript here (e.g., animations, scroll effects)
    </script>
}
